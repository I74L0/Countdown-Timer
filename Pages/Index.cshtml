@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<main>
    <div class="box">
        <div class="name">Event Name</div>
        <div class="body">
            <div class="today">
                Today: 00:00 00/00/00
            </div>
            <div class="timer">
                <div>
                    <p id="days">00</p>
                    <p>days</p>
                </div>
                <div class="bar"></div>
                <div>
                    <p id="hours">00</p>
                    <p>hours</p>
                </div>
                <div class="bar"></div>
                <div>
                    <p id="minutes">00</p>
                    <p>minutes</p>
                </div>
                <div class="bar"></div>
                <div>
                    <p id="seconds">00</p>
                    <p>seconds</p>
                </div>
            </div>
            <div class="event">
                Event date: 00:00 00/00/00
            </div>
        </div>
    </div>
    <div class="form">
        <div>
            <label for="name">Event Name:</label><br>
            <input type="text" id="name" placeholder="Event name" required>
        </div>
        <div>
            <label for="date">Date:</label><br>
            <input type="date" id="date" placeholder="Date of event">
        </div>
        <div class="input">
            <label for="time">Time (optional):</label><br>
            <input type="number" id="hours" placeholder="Hour" min="0" max="24">
            <input type="number" id="minutes" placeholder="Minutes" min="0" max="60">
            <input type="number" id="seconds" placeholder="Seconds" min="0" max="60">
        </div>
    </div>
    <div>
        <button id="start">Start</button>
    </div>
</main>