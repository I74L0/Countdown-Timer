@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<main>
    <div class="box">
        <div class="name">Event Name</div>
        <div class="body">
            <div class="today">
                Today: 00:00 00/00/00
            </div>
            <div class="timer">
                <div id="days">00</div>
                <div id="hours">00</div>
                <div id="minutes">00</div>
                <div id="seconds">00</div>
            </div>
            <div class="event">
                Event date: 00:00 00/00/00
            </div>
        </div>
    </div>
    <div class="form">
        <div>
            <label for="name">Event Name:</label><br>
            <input type="text" id="name" placeholder="Event name" required>
        </div>
        <div>
            <label for="date">Date:</label><br>
            <input type="date" id="date" placeholder="Date of event">
        </div>
        <div class="input">
            <label for="time">Time (optional):</label><br>
            <input type="number" id="hours" placeholder="Hour" max="24">
            <input type="number" id="minutes" placeholder="Minutes" max="60">
            <input type="number" id="seconds" placeholder="Seconds" max="60">
        </div>
    </div>
    <div>
        <button id="start">Start</button>
    </div>
    <p id="p"></p>
</main>