@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<main>
    <div class="box">
        <div class="name">Event Name</div>
        <div class="body">
            <div class="today">
                Today: nn:nn nn/nn/nn
            </div>
            <div class="timer">
                <div id="day">11</div>
                <div id="hour">11</div>
                <div id="minutes">11</div>
                <div id="seconds">11</div>
            </div>
            <div class="event">
                Event date:
            </div>
        </div>
    </div>
    <div class="form">
        <div>
            <label for="name">Event Name:</label><br>
            <input type="text" id="name" placeholder="Event name" required>
        </div>
        <div>
            <label for="date">Date:</label><br>
            <input type="date" id="date" placeholder="Date of event">
        </div>
        <div>
            <label for="time">Time (optional):</label><br>
            <input type="text" id="time" placeholder="Time of event">
        </div>
        <div>
            <button id="start">Start</button>
        </div>
    </div>
</main>